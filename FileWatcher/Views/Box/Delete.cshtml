@model FileWatcherApp.Models.Box.BoxDeleteViewModel

<h2>Delete Box</h2>

<h3>Are you sure you want to delete this box?</h3>

<div>
    <h4>@Model.BoxName</h4>
    <dl class="row">
        <dt class="col-sm-2">Box Name</dt>
        <dd class="col-sm-10">@Model.BoxName</dd>
        <dt class="col-sm-2">Schedule Time</dt>
        <dd class="col-sm-10">@Model.ScheduleTime</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BoxId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
