@using FileWatcherApp.Data.Entities
@model FileWatcherApp.Models.Box.BoxListViewModel

<h2>Boxes</h2>

<form method="get" asp-action="Index" class="d-flex align-items-center">
    <div class="input-group mb-3 me-3">
        <input type="text" name="searchString" value="@Model.SearchString" class="form-control" placeholder="Search..." />
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
    <div class="input-group mb-3">
        <a class="btn btn-success" asp-action="Create">+ Create New Box</a>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-success">
        <tr>
            <th>ID</th>
            <th>Box Name</th>
            <th>Schedule</th>
            <th>Calendar Days</th>
            <th>Timezone</th>
            <th>Calendar</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var box in Model.Boxes)
        {
            <tr>
                <td>@box.BoxId</td>
                <td>@box.BoxName</td>
                <td>@box.ScheduleTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    @if (!string.IsNullOrEmpty(box.ScheduleType.ToString()))
                    {
                        @box.ScheduleType.ToString()
                    }
                    else
                    {
                        <span>None</span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(box.Timezone))
                    {
                        @box.Timezone
                    }
                    else
                    {
                        <span>None</span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(box.CalendarName))
                    {
                        @box.CalendarName
                    }
                    else
                    {
                        <span>None</span>
                    }
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@box.BoxId">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@box.BoxId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-searchString="@Model.SearchString">Previous</a>
            </li>
        }
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchString="@Model.SearchString">@i</a>
            </li>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-searchString="@Model.SearchString">Next</a>
            </li>
        }
    </ul>
</nav>
