@model FileWatcherApp.Models.Job.CreateViewModel

<div class="card mb-3">
    <div class="card-header">
        Create New Job
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="JobName" class="control-label"></label>
                <input asp-for="JobName" class="form-control" />
                <span asp-validation-for="JobName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FilePath" class="control-label">File Path (use {Today}, {Today-1},{Today+1}.,etc to add dynamic dates in file path)</label>
                <input asp-for="FilePath" class="form-control" />
                <span asp-validation-for="FilePath" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ExpectedArrivalTime" class="control-label"></label>
                <input asp-for="ExpectedArrivalTime" type="time" class="form-control" />
                <span asp-validation-for="ExpectedArrivalTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceTeamContact" class="control-label">SourceTeamContact use (;) for multiple email IDs</label>
                <input asp-for="SourceTeamContact" class="form-control" />
                <span asp-validation-for="SourceTeamContact" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AxwayID" class="control-label"></label>
                <input asp-for="AxwayID" class="form-control" />
                <span asp-validation-for="AxwayID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CheckIntervalMinutes" class="control-label">Check for file before (Mins)</label>
                <input asp-for="CheckIntervalMinutes" class="form-control" />
                <span asp-validation-for="CheckIntervalMinutes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BoxId" class="control-label"></label>
                <select asp-for="BoxId" class="form-control" asp-items="Model.BoxList">
                    <option value="">Select Box</option>
                </select>
                <span asp-validation-for="BoxId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CalendarId" class="control-label"></label>
                <select asp-for="CalendarId" class="form-control" asp-items="Model.CalendarList">
                    <option value="">Select Calendar</option>
                </select>
                <span asp-validation-for="CalendarId" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <div class="form-check form-switch me-3">
                    <input class="form-check-input" asp-for="IsActive" type="checkbox" checked>
                    <label class="form-check-label" for="IsActive">Active</label>
                </div>
                <div class="form-check form-switch me-3">
                    <input class="form-check-input" asp-for="IgnoreBoxSchedule" type="checkbox">
                    <label class="form-check-label" for="IgnoreBoxSchedule">IgnoreBoxSchedule</label>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" asp-for="NotifySourceTeamAutomatically" type="checkbox" checked>
                    <label class="form-check-label" for="NotifySourceTeamAutomatically">Notify Source Team Automatically</label>
                </div>

            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
