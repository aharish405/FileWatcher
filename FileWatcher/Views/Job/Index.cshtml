@model FileWatcherApp.Models.Job.JobListViewModel

<h2>Jobs</h2>

<form method="get" asp-action="Index" class="d-flex align-items-center">
    <div class="input-group mb-3 me-3">
        <input type="text" name="searchString" value="@Model.SearchString" class="form-control" placeholder="Search..." />
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
    <div class="input-group mb-3">
        <a class="btn btn-success" asp-action="Create">+ Create New Job</a>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-success">
        <tr>
            <th>Job ID</th>
            <th>Box Name</th>
            <th>Job Name</th>
            <th>File Path</th>
            <th>Expected Arrival Time</th>
            <th>Check Interval (Min)</th>            
            <th>Calendar</th>
            <th>Time Zone</th>
            <th>Ignore Box Schedule</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model.Jobs)
        {
            <tr>
                <td>@job.JobId</td>
                <td>@(job.Box != null ? job.Box.BoxName : "N/A")</td>
                <td>@job.JobName</td>
                <td>@job.FilePath</td>
                <td>@job.ExpectedArrivalTime.ToString("HH:mm")</td>
                <td>@job.CheckIntervalMinutes</td>                
                <td>@(job.Calendar != null ? job.Calendar.Name : "N/A")</td>
                <td>@(job.Calendar != null ? job.Calendar.Timezone : "N/A")</td>
                <td>@(job.IgnoreBoxSchedule ? "Yes" : "No")</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@job.JobId">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@job.JobId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-searchString="@Model.SearchString">Previous</a>
            </li>
        }
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchString="@Model.SearchString">@i</a>
            </li>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-searchString="@Model.SearchString">Next</a>
            </li>
        }
    </ul>
</nav>
