@model FileWatcherApp.Models.ImportCsv.ImportCsvViewModel

<div class="card mb-3">
    <div class="card-header">
        Bulk Upload Data
    </div>
    <div class="card-body">
        <form asp-action="Import" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="importType">Select Import Type:</label>
                <select asp-for="ImportType" class="form-control">
                    <option value="Box">Box</option>
                    <option value="Job">Job</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="csvFile">Upload CSV File:</label>
                <input type="file" asp-for="CsvFile" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Upload</button>
        </form>
    </div>
    <div class="card-footer">
        <h3>Download CSV Templates</h3>
        <p>Download a sample CSV template for the data you want to import:</p>
        <a href="@Url.Action("DownloadTemplate", "ImportCsv", new { templateType = "Box" })" class="btn btn-secondary">Download Box Template</a>
        <a href="@Url.Action("DownloadTemplate", "ImportCsv", new { templateType = "Job" })" class="btn btn-secondary">Download Job Template</a>

    </div>
</div>

