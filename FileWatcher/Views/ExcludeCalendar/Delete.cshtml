@model FileWatcherApp.Models.ExcludeCalendar.ExcludeCalendarViewModel

<h2>Delete Exclude Calendar</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Exclude Calendar ID
        </dt>
        <dd class="col-sm-10">
            @Model.ExcludeCalendarId
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Excluded Dates
        </dt>
        <dd class="col-sm-10">
            @Model.ExcludedDates
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ExcludeCalendarId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
