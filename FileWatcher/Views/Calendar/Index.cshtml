@model FileWatcherApp.Models.Calendar.CalendarListViewModel

<h2>Calendars</h2>

<form method="get" asp-action="Index" class="d-flex align-items-center">
    <div class="input-group mb-3 me-3">
        <input type="text" name="searchString" value="@Model.SearchString" class="form-control" placeholder="Search..." />
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
    <div class="input-group mb-3">
        <a class="btn btn-success" asp-action="Create">+ Create New Calendar</a>
        <a class="btn btn-warning" asp-controller="ExcludeCalendar" asp-action="Index">Exclude Calendars/Holidays</a>
    </div>
</form>

<table class="table table-bordered table-striped table-sm">
    <thead class="table-success">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Schedule Type</th>
            <th>Days</th>
            <th>Timezone</th> <!-- New column -->
            <th>Description</th> <!-- New column -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var calendar in Model.Calendars)
        {
            <tr>
                <td>@calendar.CalendarId</td>
                <td>@calendar.Name</td>
                <td>@calendar.ScheduleType</td>
                <td>@calendar.Days</td>
                <td>@calendar.Timezone</td> <!-- Display Timezone -->
                <td>@calendar.Description</td> <!-- Display Description -->
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@calendar.CalendarId">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@calendar.CalendarId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-searchString="@Model.SearchString">Previous</a>
            </li>
        }
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchString="@Model.SearchString">@i</a>
            </li>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-searchString="@Model.SearchString">Next</a>
            </li>
        }
    </ul>
</nav>
