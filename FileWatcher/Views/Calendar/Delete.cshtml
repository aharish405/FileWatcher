@model FileWatcherApp.Models.Calendar.CalendarViewModel

<div class="card mb-3">
    <div class="card-header">
        Delete Calendar
    </div>
    <div class="card-body">
        <div>
            <h4>Are you sure you want to delete this calendar?</h4>
            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        Name
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Name
                    </dd>
                    <dt class="col-sm-2">
                        Schedule Type
                    </dt>
                    <dd class="col-sm-10">
                        @Model.ScheduleType
                    </dd>
                    <dt class="col-sm-2">
                        Timezone
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Timezone
                    </dd>
                    <dt class="col-sm-2">
                        Description
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Description
                    </dd>
                    <dt class="col-sm-2">
                        Days
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Days
                    </dd>
                </dl>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="CalendarId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>



